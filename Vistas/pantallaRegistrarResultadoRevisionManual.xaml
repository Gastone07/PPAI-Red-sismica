<Window x:Class="Vistas.pantallaRegistrarResultadoRevisionManual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Resultado de RevisiÃ³n Manual" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgEventosSismicos"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10" Background="Yellow" BorderBrush="#FF688CAF" Foreground="#FF5B5B5B">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha/Hora Ocurrencia" Binding="{Binding FechaHoraOcurrencia, StringFormat='dd/MM/yyyy HH:mm'}" Width="*" />
                <DataGridTextColumn Header="Fecha/Hora Fin" Binding="{Binding FechaHoraFin, StringFormat='dd/MM/yyyy HH:mm'}" Width="*" />
                <DataGridTextColumn Header="Latitud Epicentro" Binding="{Binding LatitudEpicentro}" Width="*" />
                <DataGridTextColumn Header="Longitud Epicentro" Binding="{Binding LongitudEpicentro}" Width="*" />
                <DataGridTextColumn Header="Latitud Hipocentro" Binding="{Binding LatitudHipocentro}" Width="*" />
                <DataGridTextColumn Header="Longitud Hipocentro" Binding="{Binding LongitudHipocentro}" Width="*" />
                <DataGridTextColumn Header="Magnitud" Binding="{Binding ValorMagnitud}" Width="*" />
                <DataGridTextColumn Header="Estado Actual" Binding="{Binding estadoActual.nombreEstado}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAceptar" Content="Aceptar" Width="100" Margin="0,0,10,0" Click="btnAceptar_Click" RenderTransformOrigin="-1.816,-0.233"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>