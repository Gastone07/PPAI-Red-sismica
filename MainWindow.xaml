<Window x:Class="PPAI_REDSISMICA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPAI_REDSISMICA"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Botones arriba -->
        <StackPanel Orientation="Horizontal" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0">
            <Button x:Name="btnRegistrarRevision" Content="Registrar resultado de revisión manual" Click="btnRegistrarRevision_Click"/>
            <Button x:Name="btnTexto1" Content="texto1" Margin="20,0,20,0" Click="btnTexto1_Click"/>
            <Button x:Name="btnTexto2" Content="texto2" Click="btnTexto2_Click"/>
        </StackPanel>
        <!-- Imagen de fondo estirada a lo largo, con margen superior -->
        <Image Source="/img/sismo3.jpg"
               Grid.Row="1"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               Margin="0,0,0,0"
               Opacity="1">
        </Image>
    </Grid>
</Window>
